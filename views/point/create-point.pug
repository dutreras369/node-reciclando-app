extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contents  
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold Reci
            span.font-normal clando
        h2.text-center.text-2xl.font-extrabold= page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8

                div.space-y-3
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General
                    p.text-gray-600 Añade información sobre el punto de reciclaje

                div.space-y-5
                    label(for="name" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Nombre
                    input(placeholder="Nombre del espacio o lugar" type="text" name="name" id="name"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                    label(for="category" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Categoria
                    select(name="category" id="category" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                        option(value="") Seleccione 

                div.space-y-5
                    label(for="address" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Dirección
                    input(placeholder="ingrese dirección " type="text" name="address" id="address"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                div(class="md:flex md:gap-4")
                    div(class="md:w-1/3")
                        label(for="region" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Región
                        select(name="region" id="region" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                            option(value="") Seleccione 
                    div(class="md:w-1/3")
                        label(for="provincia" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Provincia
                        select(name="provincia" id="provincia" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                            option(value="") Seleccione 

                    div(class="md:w-1/3")
                        label(for="comuna" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Comuna
                        select(name="comuna" id="comuna" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                            option(value="") Seleccione 
            
            div.border-gray-200.border-t.py-5.space-y-5
                h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación 
                p.text-gray-600 Información sobre el punto de reciclaje en el mapa
                #map.h-96.m-8 

                div
                    p.street
                    input(type="hidden" name="street" id="street")
                    input(type="hidden" name="lat" id="lat")
                    input(type="hidden" name="lng" id="lng")


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/map.js")